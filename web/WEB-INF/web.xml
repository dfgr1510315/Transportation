<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>DriverServlet</servlet-name>
        <servlet-class>servlet.DriverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverServlet</servlet-name>
        <url-pattern>/DriverServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarServlet</servlet-name>
        <servlet-class>servlet.CarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarServlet</servlet-name>
        <url-pattern>/CarServlet.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OperateServlet</servlet-name>
        <servlet-class>servlet.OperateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OperateServlet</servlet-name>
        <url-pattern>/OperateServlet.do</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>repair_unitServlet</servlet-name>
    <servlet-class>servlet.repair_unitServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>repair_unitServlet</servlet-name>
        <url-pattern>/repair_unitServlet.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccidentServlet</servlet-name>
        <servlet-class>servlet.AccidentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccidentServlet</servlet-name>
        <url-pattern>/AccidentServlet.do</url-pattern>
    </servlet-mapping>
</web-app>